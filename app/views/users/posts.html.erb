<div class="container">
  <ul class="row">
    <%= render 'user_nav' %>

    <li class="col-xs-12 col-sm-8 col-md-9">
      <div class="article user_content">
        <div class="tab-content">
          <% if @admin_troupes.present? %>
              <% @admin_troupes.each do |troupe| %>
                <% troupe.posts.each do |post| %>
                  <div class="user_post_index">
                    <%= link_to image_tag(post.flyer_front), post_path(post.id) %>
                    <%= link_to post.title, post_path(post.id), class:"post_link"%><br>
                    <%= link_to troupe.name, troupe_path(troupe.id), class:"troupe_link" %>
                  </div>
                <% end %>
              <% end %>
          <% else %>
            <p>投稿はありません</p>
          <% end %>
        </div>
      </div>
    </li>
  </ul>
</div>
