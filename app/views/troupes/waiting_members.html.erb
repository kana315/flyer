<ul class="row">
  <%= render 'troupe_nav' %>
  <li class="col-xs-12 col-sm-8 col-md-9">
    <div class="user_content">
      <% if @member_requests.present? %>
        <% @member_requests.each do |request| %>
          <div class="troupe_area">
            <div class="link_area">
              <%= link_to image_tag(request.user.icon), user_path(request.user_id), class:"user_icon_link" %>
              <%= link_to request.user.name, user_path(request.user_id), class:"name_link" %>
            </div>
              <%= link_to 'メンバー登録', member_relations_path(troupe_id: @troupe.id, user_id:request.user),
                method: :post, class:"btn btn-success index-btn" %>
          </div>
        <% end %>
      <% else %>
        <p>申請待ちメンバーはいません</p>
      <% end %>
    </div>
  </li>
</ul>
