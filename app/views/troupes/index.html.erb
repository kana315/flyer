<article class="article">
  <h2 class="title">劇団一覧</h2>

  <%= search_form_for @q do |f| %>
    <div class="search-form">
      <%= f.text_field :keywords, required: false, value: params.dig(:q, :keywords),
                       class:"form-control" %>
    </div>
    <%= f.submit "検索", class: "search-button" %>
  <% end %>

  <% if @result.any? %>
  <div class="troupe_index">
    <% @result.each do |result| %>
      <div class="troupe_area">
        <div class="link_area">
          <%= link_to image_tag(result.icon), troupe_path(result.id), class:"troupe_icon_link" %>
          <%= link_to result.name, troupe_path(result.id), class:"name_link" %>
        </div>
      </div>
    <% end %>
      </div>
  <% else %>
      <p>見つかりませんでした。</p>
  <% end %>
  <%= paginate @result %>
<article>
